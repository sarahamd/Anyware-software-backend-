{
  "compilerOptions": {
    "target": "ES2020",               // output JS target
    "module": "commonjs",             // Node.js ESM support
    "moduleResolution": "node",   // resolves imports like Node
    "outDir": "dist",                 // compiled JS goes here
    "rootDir": "src",                 // source TS files
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}