{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "outDir": "dist",
     "moduleResolution": "Node",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
